<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/hotplace_grid_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_main_hotplace_grid_image_height" />
    </FrameLayout>

    <RatingBar
        android:layout_marginTop="3dp"
        android:id="@+id/hotplace_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:numStars="5"
        style="?android:attr/ratingBarStyleSmall" />

    <TextView
        android:layout_marginLeft="1dp"
        android:id="@+id/hotplace_grid_txt_title"
        style="@style/main_hotplace_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="6.0dp"
        android:text="에머이 선릉점" />

    <RelativeLayout
        android:layout_marginLeft="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hotplace_review_icon"
            style="@style/main_hotplace_item_review_icon"
            android:layout_width="24.3dp"
            android:layout_height="14.7dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:text="후기" />

        <TextView
            android:id="@+id/hotplace_review"
            style="@style/main_hotplace_item_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hotplace_review_icon"
            android:layout_toRightOf="@+id/hotplace_review_icon"
            android:text="후기 불라불라불라" />

        <TextView
            android:id="@+id/hotplace_review_text"
            style="@style/main_hotplace_item_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotplace_review_icon"
            android:layout_marginRight="3dp"
            android:text="리뷰" />

        <TextView
            android:id="@+id/hotplace_review_count_txt"
            style="@style/main_hotplace_item_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotplace_review_icon"
            android:layout_toRightOf="@+id/hotplace_review_text"
            android:text="10" />

        <TextView
            android:id="@+id/hotplace_review_divid"
            style="@style/main_hotplace_item_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotplace_review_icon"
            android:layout_toRightOf="@+id/hotplace_review_count_txt"
            android:text=" | " />

        <TextView
            android:id="@+id/hotplace_grid_txt_distance"
            style="@style/main_hotplace_item_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hotplace_review_icon"
            android:layout_toRightOf="@+id/hotplace_review_divid"
            android:text="400m" />
    </RelativeLayout>
</LinearLayout>



