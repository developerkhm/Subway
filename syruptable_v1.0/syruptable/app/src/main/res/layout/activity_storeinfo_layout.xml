<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- toolbar -->
    <include layout="@layout/base_appbar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <!-- 메인 사진 뷰페이저-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.skt.tmaphot.ImageViewPager
                    android:id="@+id/viewpager_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/storeinfo_viewpager_height"
                    android:background="@color/colorBlack"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/viewpager_container"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="14dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/round_storeinfo_image_count">

                    <TextView
                        android:id="@+id/viewpager_image_count_txt"
                        android:layout_width="44dp"
                        android:layout_height="18.7dp"
                        android:gravity="center"
                        android:padding="2dp"
                        android:textColor="@color/colorWhite"
                        android:textSize="11.8dp" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="22dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/storeinfo_info_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/storeinfo_info_evaluate_count"
                    style="@style/storeinfo_info_evaluate_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/storeinfo_info_name"
                style="@style/storeinfo_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/storeinfo_info_address"
                    style="@style/storeinfo_info_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/storeinfo_info_type"
                    style="@style/storeinfo_info_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:src="@drawable/img_storeinfo_review_count" />

                <TextView
                    android:id="@+id/storeinfo_review_count"
                    style="@style/storeinfo_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@null"
                    android:src="@drawable/img_storeinfo_bookmark_count" />

                <TextView
                    android:id="@+id/storeinfo_bookmark_count"
                    style="@style/storeinfo_text_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_gray_d4" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/storeinfo_info_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:src="@drawable/selector_storeinfo_bookmark" />

                    <TextView
                        style="@style/storeinfo_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="즐겨찾기" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/storeinfo_info_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="39dp"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:src="@drawable/selector_storeinfo_review" />

                    <TextView
                        style="@style/storeinfo_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="39dp"
                        android:text="리뷰쓰기" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/storeinfo_info_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="10dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:src="@drawable/selector_storeinfo_evaluate" />

                    <TextView
                        style="@style/storeinfo_info_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평가하기" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/text_gray_d4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="33dp"
                android:orientation="vertical">

                <TextView
                    style="@style/storeinfo_info_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:text="주소" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/storeinfo_detail_address"
                        style="@style/storeinfo_info_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp" />

                    <TextView
                        style="@style/storeinfo_info_distance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    style="@style/storeinfo_info_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="25dp"
                    android:text="전화번호" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/storeinfo_phone_number"
                        style="@style/storeinfo_info_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <TextView
                    style="@style/storeinfo_info_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="25dp"
                    android:text="매장정보" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/storeinfo_business_hours"
                        style="@style/storeinfo_info_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/storeinfo_day_off"
                        style="@style/storeinfo_info_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/storeinfo_info_content"
                        style="@style/storeinfo_info_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/storeinfo_review_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/text_gray_d4" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/review_category"
                    style="@style/storeinfo_review_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="리뷰" />

                <TextView
                    style="@style/storeinfo_review_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/review_category"
                    android:layout_toRightOf="@+id/review_category"
                    android:text="399" />

                <LinearLayout
                    android:id="@+id/review_list_write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:background="@null"
                        android:src="@drawable/selector_storeinfo_review" />

                    <TextView
                        android:id="@+id/review_category_write"
                        style="@style/storeinfo_review_write"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="리뷰쓰기" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_gray_d4" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/review_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_gray_d4"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none" />

            <Button
                android:id="@+id/review_more"
                style="@style/storeinfo_review_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:padding="15dp"
                android:text="339개 더보기" />

            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/text_gray_d4" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">

                <TextView
                    android:id="@+id/review_category_social"
                    style="@style/storeinfo_review_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="소셜 리뷰" />

                <TextView
                    style="@style/storeinfo_review_count_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/review_category_social"
                    android:layout_toRightOf="@+id/review_category_social"
                    android:text="39" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/socialreview_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_gray_d4"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none" />

            <Button
                android:id="@+id/socialreview_more"
                style="@style/storeinfo_review_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center"
                android:padding="15dp"
                android:text="39개 더보기" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>






