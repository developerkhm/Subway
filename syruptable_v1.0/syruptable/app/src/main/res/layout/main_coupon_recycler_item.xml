<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_coupon_recyler_item_image"
            android:layout_width="@dimen/activity_main_default_recycler_item_width"
            android:layout_height="@dimen/activity_main_default_recycler_item_height"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/main_coupon_recyler_item_sale"
            style="@style/main_coupon_item_sale"
            android:layout_width="@dimen/activity_main_realreview_item_sale_width"
            android:layout_height="@dimen/activity_main_realreview_item_sale_height"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/activity_main_default_recycler_item_padding"
            android:background="@drawable/round_main_coupon_item_sale"
            android:gravity="center"
            android:text="20%" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/main_coupon_recyler_item_title"
                style="@style/main_coupon_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="꽃새우 영번지" />

            <TextView
                android:id="@+id/main_coupon_recyler_item_menu"
                style="@style/main_coupon_item_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="독도꽃새우" />

            <TextView
                android:id="@+id/main_coupon_recyler_item_distance"
                style="@style/main_coupon_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.35Km" />
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>