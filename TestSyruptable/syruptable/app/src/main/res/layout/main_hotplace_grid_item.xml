<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hotplace_grid_item_image"
            android:layout_width="@dimen/activity_main_hotplace_grid_image_width"
            android:layout_height="@dimen/activity_main_hotplace_grid_image_height" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/hotplace_ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/hotplace_grid_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에머이 선릉점" />

            <TextView
                android:id="@+id/hotplace_grid_txt_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="후기 불라불라불라" />

            <TextView
                android:id="@+id/hotplace_grid_txt_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 10 | 40m" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>





