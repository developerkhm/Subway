<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/activity_main_default_recycler_item_width"
    android:layout_height="@dimen/activity_main_default_recycler_item_height">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/main_coupon_recyler_item_image"
            android:layout_width="@dimen/activity_main_default_recycler_item_width"
            android:layout_height="@dimen/activity_main_default_recycler_item_height" />
    </FrameLayout>

    <TextView
        android:id="@+id/coupon_sale"
        android:layout_width="@dimen/activity_main_realreview_item_sale_width"
        android:layout_height="@dimen/activity_main_realreview_item_sale_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_main_default_recycler_item_padding"
        android:background="@drawable/round_main_coupon_item_sale"
        android:gravity="center"
        android:text="20%"
        style="@style/main_coupon_item_sale"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_main_default_recycler_item_padding"
        android:layout_marginBottom="@dimen/activity_main_default_recycler_item_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_coupon_recyler_item_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="꽃새우 영번지"
            style="@style/main_coupon_item_name"/>

        <TextView
            android:id="@+id/main_coupon_recyler_item_txt_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="독도꽃새우"
            style="@style/main_coupon_item_menu"/>

        <TextView
            android:id="@+id/main_coupon_recyler_item_txt_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.35Km"
            style="@style/main_coupon_item_distance"/>

    </LinearLayout>
</RelativeLayout>
