<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/coupon_image"
            android:layout_width="match_parent"
            android:layout_height="193.3dp" />

        <TextView
            android:id="@+id/coupon_sale"
            android:layout_width="59dp"
            android:layout_height="32.7dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/round_main_coupon_item_sale"
            android:gravity="center"
            android:text="세일" />


        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/coupon_image">

            <TextView
                android:id="@+id/coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="꽃새우 영번지"
                style="@style/coupon_item_name"/>

            <TextView
                android:id="@+id/coupon_price"
                android:layout_alignBaseline="@+id/coupon_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_alignParentRight="true"
                android:text="40,000원"
                style="@style/coupon_item_price"/>

            <TextView
                android:id="@+id/coupon_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/coupon_name"
                android:layout_toLeftOf="@+id/coupon_price"
                android:layout_marginRight="5dp"
                android:text="독도꽃새우"
                style="@style/coupon_item_menu"/>

            <TextView
                android:id="@+id/coupon_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coupon_name"
                android:text="서울) 강남구,일식"
                style="@style/coupon_item_type"/>

            <TextView
                android:id="@+id/coupon_preprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/coupon_name"
                android:text="80,000원"
                style="@style/coupon_item_preprice"/>

        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>