<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/main_nav_header_layout"
        app:menu="@menu/activity_syrup_main_drawer" />


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/main_nestedscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:scrollbars="none">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="358dp">

                        <android.support.v4.view.ViewPager
                            android:id="@+id/viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <com.skt.tmaphot.activity.main.banner.RollingIndicatorView
                            android:id="@+id/indicator_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="20dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="189dp"
                                android:layout_height="31dp"
                                android:background="@drawable/logo_test" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/main_gps_address"
                            android:layout_width="match_parent"
                            android:layout_height="31dp"
                            android:gravity="center"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/main_text_banner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center" />

                    <LinearLayout
                        android:layout_width="@dimen/activity_main_searchbar_width"
                        android:layout_height="@dimen/activity_main_searchbar_height"
                        android:layout_gravity="bottom|center_horizontal"
                        android:orientation="horizontal"
                        android:background="@drawable/border_main_searchbar">

                        <ImageView
                            android:id="@+id/main_img_searchbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>


                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:theme="@style/TransparentToolbar" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_layout_bottom"
                    android:orientation="vertical"
                    android:paddingBottom="40dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:text="@string/main_content_menu_coupon"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/main_txt_coupon_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            style="@style/main_more"/>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/coupon_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <ProgressBar
                            android:id="@+id/coupon_recycler_view_progressbar"
                            style="@android:style/Widget.Holo.Light.ProgressBar.Large.Inverse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foregroundGravity="center_vertical"
                            android:visibility="gone" />
                    </FrameLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:text="@string/main_content_menu_food"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="12dp"
                            android:layout_gravity="end|center_vertical"
                            android:src="@drawable/img_main_menu_more"
                            android:contentDescription="TODO" />

                    </FrameLayout>

                    <!--menu-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/menu_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <!--ImageView
                            android:id="@+id/main_img_menu_1"
                            android:layout_width="@dimen/activity_main_menu_image_width"
                            android:layout_height="@dimen/activity_main_menu_image_height"
                            android:contentDescription="TODO" />

                        <ImageView
                            android:id="@+id/main_img_menu_2"

                            android:layout_width="@dimen/activity_main_menu_image_width"
                            android:layout_height="@dimen/activity_main_menu_image_height"
                            android:contentDescription="TODO" />

                        <ImageView
                            android:id="@+id/main_img_menu_3"
                            android:layout_width="@dimen/activity_main_menu_image_width"
                            android:layout_height="@dimen/activity_main_menu_image_height"
                            android:contentDescription="TODO" />

                        <ImageView
                            android:id="@+id/main_img_menu_4"

                            android:layout_width="@dimen/activity_main_menu_image_width"
                            android:layout_height="@dimen/activity_main_menu_image_height" /-->
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_layout_bottom"
                    android:orientation="vertical"
                    android:paddingBottom="40dp">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:text="@string/main_content_menu_review"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/main_txt_review_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:text="@string/main_content_menu_review_more" />


                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/review_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                        <ProgressBar
                            android:id="@+id/review_recycler_view_progressbar"
                            style="@android:style/Widget.Holo.Light.ProgressBar.Large.Inverse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:foregroundGravity="center_vertical"
                            android:visibility="gone" />
                    </FrameLayout>


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start|center_vertical"
                            android:text="@string/main_content_menu_hotdeal"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/main_txt_hotdeal_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|center_vertical"
                            android:text="@string/main_content_menu_hotdeal_more" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/hotdeal_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />
                    </FrameLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_layout_bottom"
                    android:orientation="vertical"
                    android:layout_marginVertical="15dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:text="@string/main_content_menu_hotplace"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center_vertical"
                            android:gravity="right">

                            <TextView
                                android:id="@+id/main_hotplace_pop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="인기순" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | " />


                            <TextView
                                android:id="@+id/main_hotplace_distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="거리순" />

                        </LinearLayout>


                    </FrameLayout>


                    <com.skt.tmaphot.activity.main.hotplace.ExpandableHeightGridView
                        android:id="@+id/hotplace_gridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:isScrollContainer="false"
                        android:verticalSpacing="10dp"
                        android:numColumns="2" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.DrawerLayout>
