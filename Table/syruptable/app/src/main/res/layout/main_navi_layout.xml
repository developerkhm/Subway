<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:orientation="vertical">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:paddingLeft="20dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/nav_profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/nav_profile_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nav_profile_image"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/nav_profile_image"
            android:text="@string/nav_header_modify"
            android:textColor="@color/colorGreen" />

        <TextView
            android:id="@+id/nav_profile_name"
            style="@style/navi_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nav_profile_image"
            android:layout_marginTop="18dp"
            android:text="@string/nav_header_title" />

        <TextView
            android:id="@+id/nav_profile_email"
            style="@style/navi_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nav_profile_name"

            android:layout_marginTop="13dp"
            android:text="@string/nav_header_subtitle" />

        <TextView
            android:id="@+id/navi_close"
            style="@style/navi_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="20dp"
            android:text="@string/nav_header_close" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/text_gray_d4" />


    <LinearLayout
        android:id="@+id/main_navigation_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Menu -->
        <ScrollView
            android:id="@+id/main_navigation_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_navigation_shop"
                    style="@style/navi_menu"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="SHOP" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_gray_8f" />

                <TextView
                    style="@style/navi_menu"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="내쿠폰함" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_gray_8f" />

                <TextView
                    style="@style/navi_menu"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="공지사항" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_gray_8f" />

                <TextView
                    style="@style/navi_menu"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="1:1문의" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_gray_8f" />

                <TextView
                    style="@style/navi_menu"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="설정" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_gray_8f" />

                <Button
                    android:id="@+id/main_navigation_logout_btn"
                    style="@style/navi_login"
                    android:layout_width="match_parent"
                    android:layout_height="39dp"
                    android:background="@color/colorGreen"
                    android:gravity="center"
                    android:text="로그아웃" />
            </LinearLayout>
        </ScrollView>


        <RelativeLayout
            android:id="@+id/main_navigation_logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/main_navigation_login_btn"
                style="@style/navi_login"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@color/colorGreen"
                android:gravity="center"
                android:text="@string/nav_header_login" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>